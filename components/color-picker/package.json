{
    "name": "@amalto/color-picker",
    "displayName": "ColorPicker",
    "description": "Component to pick a color.",
    "version": "1.0.20",
    "license": "MIT",
    "main": "./build/index.js",
    "typings": "./build/index.d.ts",
    "author": "Amalto Technologies",
    "publishConfig": {
        "registry": "http://repo.amalto.com:8081/repository/npm-amalto/"
    },
    "scripts": {
        "setup": "npm install --registry http://repo.amalto.com:8081/repository/npm-all/",
        "test": "ava ./test/test.js --verbose",
        "prepare": "tsc -d"
    },
    "dependencies": {
        "react": "15.6.2",
        "react-dom": "15.6.2"
    },
    "devDependencies": {
        "@ava/babel-preset-stage-4": "1.1.0",
        "@types/bootstrap": "3.3.36",
        "@types/react": "15.6.10",
        "@types/react-dom": "15.5.6",
        "ava": "0.24.0",
        "babel-preset-react": "6.24.1",
        "babel-register": "6.26.0",
        "enzyme": "3.3.0",
        "enzyme-adapter-react-15": "1.0.5",
        "path": "0.12.7",
        "react-addons-test-utils": "15.6.2",
        "react-test-renderer": "15.6.2",
        "sinon": "4.2.2",
        "ts-loader": "3.2.0",
        "typescript": "2.6.2",
        "webpack": "3.10.0"
    },
    "ava": {
        "concurrency": 5,
        "failFast": true,
        "failWithoutAssertions": false,
        "powerAssert": true,
        "require": [
            "babel-register"
        ],
        "babel": {
            "presets": [
                "@ava/stage-4",
                "react"
            ]
        }
    }
}
